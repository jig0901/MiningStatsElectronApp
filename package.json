{
  "name": "mining-stats",
  "version": "1.1.0",
  "description": "Belani Solo Mining Statistics Dashboard with In-App Browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder -mwl",
    "dist": "electron-builder",
    "clean": "rimraf dist",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "mining",
    "bitcoin",
    "statistics",
    "dashboard",
    "electron",
    "comed",
    "hashrate"
  ],
  "author": "Belani Family",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/mining-stats",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mining-stats.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.belani.miningstats",
    "productName": "Mining Stats",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],

    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },

    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64", "ia32"] },
        { "target": "portable", "arch": ["x64", "ia32"] }
      ],
      "publisherName": "Belani Family",
      "verifyUpdateCodeSignature": false
    },

    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] },
        { "target": "rpm", "arch": ["x64"] }
      ],
      "category": "Utility",
      "desktop": {
        "StartupNotify": "true",
        "MimeType": "x-scheme-handler/mining-stats"
      }
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },

    "dmg": {
      "title": "Mining Stats Installer",
      "contents": [
        { "x": 110, "y": 150 },
        { "x": 400, "y": 150, "type": "link", "path": "/Applications" }
      ],
      "window": { "width": 540, "height": 380 }
    },

    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },

    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },

    "snap": {
      "publish": ["github"]
    },

    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "mining-stats"
    }
  }
}
